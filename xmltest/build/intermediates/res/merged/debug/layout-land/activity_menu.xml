<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_page" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:baselineAligned="false" >
  
        <Button
            android:id="@+id/Button02"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:onClick="ToForm"
            android:text="@string/Menu_Blank" />
        
        <Button
            android:id="@+id/Button01"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:onClick="UploadImage"
            android:text="@string/Menu_Upload" />
        
        <Button
            android:id="@+id/UploadSelected"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:onClick="TakePicture"
            android:text="@string/Menu_Camera" />

        <Button
            android:id="@+id/load"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:onClick="Load"
            android:text="@string/Menu_Load_File" />

        <Button
            android:id="@+id/Setup"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:onClick="Setup"
            android:text="@string/Menu_Setup" />

    </LinearLayout>
    
    <RelativeLayout 
        android:id="@+id/darkness"
        android:layout_width="90dp"
        android:layout_height="55dp">
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/tutButtons" 
        android:orientation="vertical"
        android:layout_width="90dp"
        android:layout_height="55dp">
    </LinearLayout>

</RelativeLayout>