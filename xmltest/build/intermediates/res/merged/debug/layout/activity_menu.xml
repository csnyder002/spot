<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="@drawable/main_page">

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:layout_marginBottom="40dp"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
	    android:orientation="vertical" 
	    android:layout_gravity="center_horizontal|bottom">

		<Button
			android:id="@+id/Blank"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="20dp"
			android:onClick="ToForm"
			android:text="Submit Spot Report" />

		<Button
			android:id="@+id/Saved"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="20dp"
			android:onClick="Load"
			android:text="@string/Menu_Load_File" />

		<Button
			android:id="@+id/Setup"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="20dp"
			android:onClick="Setup"
			android:text="@string/Menu_Setup" />

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal|bottom" >


	    </LinearLayout>



	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal|bottom" >


	    </LinearLayout>
	</LinearLayout>
	
	<RelativeLayout
	    android:id="@+id/darkness"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_marginBottom="20dp"
	    android:background="#AA000000"
	    android:visibility="invisible" />
	
    <LinearLayout
        android:id="@+id/tutButtons"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="20dp"
	    android:orientation="vertical" 
	    android:layout_gravity="center_horizontal|bottom"
	    android:visibility="invisible">
		<TextView 
		    android:id="@+id/tutWords"
		    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:textColor="#ffffff"/>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal|bottom" >

	        <Button
	            android:id="@+id/tutBlank"
	            android:layout_width="90dp"
	            android:layout_height="55dp"
	            android:layout_gravity="bottom|left"
	            android:layout_marginRight="90dp"
	            android:onClick="TutToForm"
	            android:text="@string/Menu_Blank" />

	        <Button
	            android:id="@+id/tutUpload"
	            android:layout_width="90dp"
	            android:layout_height="55dp"
	            android:layout_gravity="center|bottom"
	            android:onClick="TutUploadImage"
	            android:text="@string/Menu_Upload" />
	    </LinearLayout>

	    <Button
	        android:id="@+id/tutCamera"
	        android:layout_width="90dp"
	        android:layout_height="55dp"
	        android:layout_gravity="center|"
	        android:gravity="center_horizontal|bottom"
	        android:onClick="TutTakePicture"
	        android:text="@string/Menu_Camera" />

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal|bottom" >

	        <Button
	            android:id="@+id/tutload"
	            android:layout_width="90dp"
	            android:layout_height="55dp"
	            android:layout_marginRight="90dp"
	            android:onClick="TutLoad"
	            android:text="@string/Menu_Load_File" />

	        <Button
	            android:id="@+id/tutSetup"
	            android:layout_width="90dp"
	            android:layout_height="55dp"
	            android:height="55dp"
	            android:onClick="TutSetup"
	            android:text="@string/Menu_Setup" />
	    </LinearLayout>
	</LinearLayout>

</FrameLayout>